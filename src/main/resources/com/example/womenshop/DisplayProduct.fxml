    <children>
        <VBox layoutY="98.0" prefHeight="482.0" prefWidth="1005.0" spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="54.0" AnchorPane.topAnchor="98.0">

            <TableView fx:id="tvProducts" prefHeight="272.0" prefWidth="1159.0">
                <columns>
                    <TableColumn fx:id="colProductsId" prefWidth="70" text="ID" />
                    <TableColumn fx:id="colProductsName" prefWidth="180" text="Name" />
                    <TableColumn fx:id="colProductsCategoryName" prefWidth="130" text="Category" />
                    <TableColumn fx:id="colProductsPurchasePrice" prefWidth="120" text="Purchase price" />
                    <TableColumn fx:id="colProductsSalePrice" prefWidth="120" text="Sale price" />
                    <TableColumn fx:id="colDiscounted" prefWidth="130" text="Discounted" />
                    <TableColumn fx:id="colProductsFinalPriceDiscounted" prefWidth="189.0" text="Final price discounted" />
                    <TableColumn fx:id="colProductsStock" minWidth="0.0" prefWidth="65.0" text="Stock" />
               <TableColumn fx:id="colProductsSize" prefWidth="75.0" text="Size" />
               <TableColumn fx:id="colProductsCreatedAt" prefWidth="153.0" text="Created at" />
                </columns>
            </TableView>

            <GridPane hgap="15" prefHeight="135.0" prefWidth="919.0" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="120.0" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="ID:" GridPane.rowIndex="0" />
                <TextField fx:id="txtID" prefHeight="35.0" prefWidth="771.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Name:" GridPane.rowIndex="1" />
                <TextField fx:id="txtName" prefHeight="35.0" prefWidth="775.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Category:" GridPane.rowIndex="2" />
                <ComboBox fx:id="cmbCategory" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <HBox spacing="15">
                <Button fx:id="btnSearch" onAction="#onSearch" text="Search" />
                <Button fx:id="btnReset" onAction="#onReset" text="Reset" />
            </HBox>

        </VBox>

            <Label layoutX="543.0" layoutY="14.0" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Search a product" />

            <Button fx:id="btnExit" layoutX="571.0" layoutY="55.0" onAction="#onExit" text="Back to menu" />
    </children>
</AnchorPane>
