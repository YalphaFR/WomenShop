<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.womenshop.controller.fxml.ManageProductController"
      alignment="CENTER" spacing="20">

    <padding>
        <Insets top="25" bottom="25" left="25" right="25"/>
    </padding>

    <Label text="Manage Products"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <Button fx:id="btnExit" text="Exit" onAction="#onExit"/>

    <ListView fx:id="lvProducts" prefHeight="200" prefWidth="500"/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="140"/>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints prefWidth="120"/>
        </columnConstraints>

        <Label text="ID:" GridPane.rowIndex="0"/>
        <Label fx:id="lblID" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Name:" GridPane.rowIndex="1"/>
        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Category:" GridPane.rowIndex="2"/>
        <ComboBox fx:id="cmbCategory" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button fx:id="btnFilter" text="Filter" GridPane.columnIndex="2" GridPane.rowIndex="2"
                onAction="#onFilter"/>

        <Label text="Purchase price:" GridPane.rowIndex="3"/>
        <TextField fx:id="txtPurchasePrice" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Sale price:" GridPane.rowIndex="4"/>
        <TextField fx:id="txtSalePrice" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Stock:" GridPane.rowIndex="5"/>
        <TextField fx:id="txtStock" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Discounted:" GridPane.rowIndex="6"/>
        <ComboBox fx:id="cmbIsDiscounted" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>

    <HBox spacing="15">
        <Button fx:id="btnReset" text="Reset" onAction="#onReset"/>
        <Button fx:id="btnSave" text="Save" onAction="#onSave"/>
        <Button fx:id="btnDelete" text="Delete" onAction="#onDelete"/>
    </HBox>
</VBox>
