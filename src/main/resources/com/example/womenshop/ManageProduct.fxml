<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.womenshop.controller.fxml.ManageProductController">

    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Manage Products" />

    <Button fx:id="btnExit" onAction="#onExit" text="Back to menu" />

    <ListView fx:id="lvProducts" prefHeight="200" prefWidth="500" />

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" maxWidth="167.0" minWidth="145.0" prefWidth="167.0" />
            <ColumnConstraints hgrow="ALWAYS" maxWidth="205.0" minWidth="183.0" prefWidth="183.0" />
            <ColumnConstraints prefWidth="120.0" />
        </columnConstraints>

        <Label text="ID:" GridPane.rowIndex="0" />
        <Label fx:id="lblID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Name:" GridPane.rowIndex="1" />
        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Category:" GridPane.rowIndex="2" />
        <ComboBox fx:id="cmbCategory" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="btnFilter" onAction="#onFilter" text="Filter" GridPane.columnIndex="2" GridPane.rowIndex="2" />

        <Label text="Purchase price:" GridPane.rowIndex="3" />
        <TextField fx:id="txtPurchasePrice" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Sale price:" GridPane.rowIndex="4" />
        <TextField fx:id="txtSalePrice" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Stock:" GridPane.rowIndex="9" />

        <Label text="Discounted:" GridPane.rowIndex="5" />
        <ComboBox fx:id="cmbIsDiscounted" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <Label text="Sale discounted price:" GridPane.rowIndex="6" />
      <TextField fx:id="txtSize" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <Label text="Size:" GridPane.rowIndex="7" />
      <Label fx:id="lblStock" prefHeight="25.0" prefWidth="184.0" GridPane.columnIndex="1" GridPane.rowIndex="9" />
      <Label fx:id="lblSaleDiscountedPrice" prefHeight="25.0" prefWidth="203.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox spacing="15">
        <Button fx:id="btnReset" onAction="#onReset" text="Reset" />
        <Button fx:id="btnSave" onAction="#onSave" text="Save" />
        <Button fx:id="btnDelete" onAction="#onDelete" text="Delete" />
    </HBox>
</VBox>
